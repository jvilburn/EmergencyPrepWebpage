{
  "name": "ward-directory-map",
  "version": "1.0.0",
  "description": "Ward Directory Map - Offline mapping application for church/LDS ward management",
  "main": "main.js",
  "scripts": {
    "start": "npx electron .",
    "dev": "npx electron . --dev",
    "build": "npx electron-builder",
    "dist": "npx electron-builder --publish=never"
  },
  "keywords": [
    "ward",
    "directory",
    "map",
    "offline",
    "emergency",
    "lds",
    "church"
  ],
  "author": "Ward Directory Map Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "fs-extra": "^11.2.0",
    "node-fetch": "^3.3.2"
  },
  "build": {
    "appId": "com.ward.directory.map",
    "productName": "Ward Directory Map",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist",
      "!*.md",
      "!package-lock.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
